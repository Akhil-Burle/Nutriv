include inc/_header

section#signup.section-signup
    .container
        .signup
            .signup-text-box
                h2.heading-secondary Get your first meal for free!
                p.signup-text
                    | Healthy, tasty and hassle-free meals are waiting for you. Start
                    | eating well today. You can cancel or pause anytime. And the
                    | first meal is on us!
                form.signup-form
                    div
                        label(for='name') Full Name
                        input#name(type='text' placeholder='John Smith' required='')
                    div
                        label(for='email') Email address
                        input#email(type='email' placeholder='me@example.com' required='')
                    div
                        label(for='password') Password
                        input#password(type='password' placeholder='••••••••' required='')
                    div
                        label(for='confirm-password') Confirm Password
                        input#confirm-password(type='password' placeholder='••••••••' required='')
                    div
                        label Profile Photo
                        input#photo(type='file' placeholder='••••••••' accept='image/*')
                        label(for="photo" class='label') Choose a Photo 

                    button.btn.btn--form Sign up now
                        //
                            <input type="checkbox" />
                            <input type="number" />
            .signup-img-box(role='img' aria-label='Food')


include inc/_footer