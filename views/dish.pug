extends base

block append head
    link(rel='stylesheet' href='/css/item.css')
    script(src="/js/item.js" defer='') 
    //- script(src="/js/stripe.js" defer='') 

block append header
    include inc/_header

block content
    .item-container
        .item-card
            .item-shoeBackground
                .item-gradients
                    .item-gradient.second(color='blue')
                    .item-gradient(color='red')
                    .item-gradient(color='green')
                    .item-gradient(color='orange')
                    .item-gradient(color='black')
                img.item-logo(src='/img/favicon.png' alt='')
                a.item-share(href='#')
                    i.fas.fa-share-alt
                img.item-shoe.item-show(src=`/img/dishes/${dish.imageCover}` alt='' color='blue')
                p.item-rating
                    ion-icon.item-star(name='star')
                    ion-icon.item-star(name='star')
                    ion-icon.item-star(name='star')
                    ion-icon.item-star(name='star')
                    ion-icon.item-star(name='star-half')
            .item-info
                .item-shoeName
                    div
                        h1.item-big=`${dish.name}`
                        span.item-new=`${String(dish.ratingsAverage).slice(0,3)} / 5 (${dish.ratingsQuantity})`
                    p.item-small=`${dish.foodType} | ${dish.type}`
                .item-description
                    p.item-title About
                    p.item-text=`${dish.summary}`
                .item-size-container
                    p.item-title quantity
                    .item-sizes
                        span.item-size.item-active 1
                        span.item-size 2
                        span.item-size 3
                        span.item-size 4
                        span.item-size 5
                        span.item-size 6
                .item-size-container
                    p.item-title quantity
                    .item-sizes
                        span.item-size.item-active 1
                        span.item-size 2
                        span.item-size 3
                        span.item-size 4
                        span.item-size 5
                        span.item-size 6
                .size-container
                    p.item-title=`who made ${dish.name}?`
                    .item-chef-details
                        img.item-chef-img(src=`/img/users/${dish.chefs[0].photo}` alt=`Image of ${dish.chefs[0].name}`)
                        span.item-chef-name=`${dish.chefs[0].name.split(' ')[0]}`
                        ion-icon.item-verify(name='checkmark-circle')
                .item-buy-price
                    if user
                        button.item-buy#book-dish(data-dish-id=`${dish.id}`)
                            i.fas.fa-shopping-cart
                            | Order Now!
                    else 
                        a.item-buy(href='/login')
                            i.fas.fa-shopping-cart
                            | Login to book!
                    h1.item-price=`${dish.price}`

                    //- <div class="price">
                    //-     <i class="fas fa-dollar-sign"></i>
                    //-     <h1>189.99</h1>
                    //-     </div>

    section.section-map
        #map(data-availableIn=`${JSON.stringify(dish.availableIn)}`)