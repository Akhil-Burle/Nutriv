include inc/_header
.item-container
    .item-card
        .item-shoeBackground
            .item-gradients
                .item-gradient.second(color='blue')
                .item-gradient(color='red')
                .item-gradient(color='green')
                .item-gradient(color='orange')
                .item-gradient(color='black')
            img.item-logo(src='/img/favicon.png' alt='')
            a.item-share(href='#')
                i.fas.fa-share-alt
            img.item-shoe.item-show(src='/img/meals/meal-1.jpg' alt='' color='blue')
            p.item-rating
                ion-icon.item-star(name='star')
                ion-icon.item-star(name='star')
                ion-icon.item-star(name='star')
                ion-icon.item-star(name='star')
                ion-icon.item-star(name='star-half')
        .item-info
            .item-shoeName
                div
                    h1.item-big=`${dish.name}`
                    span.item-new=`${dish.ratingsAverage}(${dish.ratingsQuantity})`
                p.item-small=`${dish.foodType}`
            .item-description
                p.item-title About
                p.item-text=`${dish.summary}`
            .item-size-container
                p.item-title quantity
                .item-sizes
                    span.item-size.item-active 1
                    span.item-size 2
                    span.item-size 3
                    span.item-size 4
                    span.item-size 5
                    span.item-size 6
            .size-container
                p.item-title=`who made ${dish.name}?`
                .item-chef-details
                    img.item-chef-img(src=`/img/users/${dish.chefs[0].photo}` alt=`Image of ${dish.chefs[0].name}`)
                    span.item-chef-name=`${dish.chefs[0].name.split(' ')[0]}`
                    ion-icon.item-verify(name='checkmark-circle')
                    img.item-chef-img(src=`/img/users/${dish.chefs[1].photo}` alt=`Image of ${dish.chefs[1].name}`)
                    span.item-chef-name=`${dish.chefs[1].name.split(' ')[0]}`
                    ion-icon.item-verify(name='checkmark-circle')
            .item-buy-price
                a.item-buy(href='#')
                    i.fas.fa-shopping-cart
                    | Order Now!
                h1.item-price=`${dish.price}`

