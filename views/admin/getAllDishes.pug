extends ../base 

block header 
    include ../inc/_header
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
    
block content
    main#site-main
        .container
            table.table
                thead.thead-dark
                    tr
                    th Name
                    th Price
                    th Delivery time
                    th Availability
                    th Chefs
                    th Summary
                    th Status
                    th Action
                tbody
                    each dish in dishes
                        tr
                        td=dish.name
                        td=dish.price
                        td=dish.deliveryTime
                        td=dish.availability
                        td
                        td=dish.summary
                        td=dish.valid
                        td
                            a.btn.border-shadow.update(href='/update-user?id=<%= users[i]._id%>')
                                span.text-gradient
                                    i.fas.fa-pencil-alt
                            a.btn.border-shadow.delete(data-id='<%=' users[i]._id%='')
                                span.text-gradient
                                    i.fas.fa-times


                        